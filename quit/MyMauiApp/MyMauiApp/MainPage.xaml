<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                Text="Quit"
                Clicked="OnQuitClicked"
                HorizontalOptions="Center" />

            <Button
                Text="Quit from Task"
                Clicked="OnQuitFromTaskClicked"
                HorizontalOptions="Center" />

            <Button
                Text="Quit from Task with saved context"
                Clicked="OnQuitFromTaskWithSavedContextClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

